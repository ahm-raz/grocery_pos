# Fly.io Configuration Example
# Copy this to fly.toml and customize for your app
# Run: fly launch (this will auto-generate the file)

app = "grocery-pos-backend"
primary_region = "iad"  # Change to your preferred region

[build]

[env]
  NODE_ENV = "production"
  PORT = "5000"

[http_service]
  internal_port = 5000
  force_https = true
  auto_stop_machines = true
  auto_start_machines = true
  min_machines_running = 0

  [[http_service.checks]]
    grace_period = "10s"
    interval = "30s"
    method = "GET"
    timeout = "5s"
    path = "/api/health"

[[vm]]
  memory_mb = 256
  cpu_kind = "shared"

